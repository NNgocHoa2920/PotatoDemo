@model IEnumerable<DataPotato.Models.SanPham>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1>List Sản Phẩm</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="SanPham" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"> Create New Category</i>
            </a>

        </div>

    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgURL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="~/img/@item.ImgURL" height="200px">
                </td>
                <td>
                    <div class="w-60 btn-group" role="group">
                        <a asp-controller="SanPham" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="SanPham" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                        @*  <form asp-controller="Category" asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@item.Id" />
                    <button type="submit">Delete</button>
                    </form> *@


                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
</div>